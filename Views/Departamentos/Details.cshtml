@model IEnumerable<CapaEntidad.Departamentos>

@{
    ViewBag.Title = "Details";
}

<link rel="stylesheet" href="~/Content/Loginstyles.css" />

<h2>Departamentos</h2>

@section styles{
    <link href="//cdn.datatables.net/1.10.24/css/jquery.dataTables.min.css" rel="stylesheet" />
}

<p>
    @Html.ActionLink("Crear nuevo departamento", "Create", routeValues: null, htmlAttributes: new { @class = "text-decoration-none btn-success text-light btn" })
</p>
<table class="table" id="DepTable">

    <thead>

        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Siglas)
            </th>
            <th></th>
        </tr>

    </thead>

    <tbody>

        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Siglas)
            </td>
            <td>
                @Html.ActionLink(" ", "Edit", new { id = item.ID }, htmlAttributes: new { @class = " btn-lg  glyphicon glyphicon-pencil text-decoration-none btn-warning text-light btn" })

                @Html.ActionLink(" ", "Delete", new { id = item.ID }, htmlAttributes: new { @class = " btn-lg  glyphicon glyphicon-trash text-decoration-none btn-danger text-light btn" })
            </td>
        </tr>
        }

    </tbody>
</table>

@section scripts{
    <script src="//cdn.datatables.net/1.10.24/js/jquery.dataTables.min.js"></script>
    <script>
        $('#DepTable').DataTable();
    </script>

    }